{
  "name": "io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --moder --mode staging",
    "prod-build": "vue-cli-service build --moder --mode production ",
    "lint": "vue-cli-service lint --fix",
    "test:unit": "vue-cli-service test:unit",
    "ws": "vue-cli-service build --target wc --name effect-widget src/App.vue"
  },
  "dependencies": {
    "@sentry/browser": "^5.4.3",
    "@sentry/integrations": "^5.4.2",
    "@vue/eslint-config-prettier": "^4.0.1",
    "autosize": "^4.0.2",
    "axios": "^0.18.1",
    "emoji-data-css": "^1.0.1",
    "emoji-mart-vue": "^2.6.6",
    "inputmask": "^4.0.8",
    "intl-tel-input": "^15.1.2",
    "lodash": "^4.17.11",
    "v-calendar": "^0.9.7",
    "vee-validate": "^2.2.11",
    "vue": "^2.6.10",
    "vue-click-outside": "^1.0.7",
    "vue-perfect-scrollbar": "^0.1.0",
    "vue-router": "^3.0.6",
    "vue-select": "^3.1.0",
    "vue-socket.io-extended": "^3.2.1",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-unit-jest": "^3.8.0",
    "@vue/cli-service": "^3.8.4",
    "@vue/test-utils": "^1.0.0-beta.29",
    "ajv": "^6.10.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.2",
    "node-sass": "^4.12.0",
    "pug": "^2.0.4",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "socket.io-client": "^2.2.0",
    "svg-sprite-loader": "^4.1.6",
    "vue-clicky": "^2.0.5",
    "vue-emoji-picker": "^1.0.1",
    "vue-template-compiler": "^2.6.10",
    "vue-wait": "^1.4.6",
    "webpack": "^4.39.3"
  },
  "lint-staged": {
    "* .js": [
      "lint"
    ],
    "* .vue": [
      "lint"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/prettier"
    ],
    "rules": {
      "vue/require-prop-types": "off",
      "vue/require-default-prop": "off",
      "no-unused-vars": "off",
      "no-empty-pattern": "off",
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/"
  }
}
